<p id="notice"><%= notice %></p>

<div class="section">
<div class="container">
    <div class="columns is-centered">
        <div class="column is-4">
            <h2 class="title is-2"> Feedback! </h2>
        <div class="field">
	  	    <div class="control">
                <p>
                    <% if teacher_signed_in? %>
                        <% @feedbacks.each do |item| %>
                            <div class="box">
                                <p> <%= item.student_name%></p>
                                <p> <%= item.course_name%></p>
                                <% if item.review != nil %>
                                    <p> <%= item.review%></p>
                                <% end %>
                            </div>
                        <% end %>
                    <% end %>
                    <% if student_signed_in? %>
                    <% @feedbacks.each do |item| %>
                        <div class="box">
                            <p> <%= item.teacher_name%></p>
                            <p> <%= item.course_name%></p>
                            <% if item.review == "None" %>
                                <%= simple_form_for item do |f| %>
                                    <%= f.input :review, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
                                    <%= f.button :submit, "Update", class:"button is-primary" %>
                                <% end %>
                            <% else %>
                                <p> <%= item.review%></p>
                            <% end %>
                        </div>
                    <% end %>
                    <% end %>
                </p>
	  	    </div>
		</div>
        <%= link_to 'Back', root_path %>
        </div>
    </div>
</div>
</div>
